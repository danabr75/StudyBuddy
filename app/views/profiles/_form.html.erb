<%= turbo_frame_tag 'user-form' do %>
  <div class="container">
    <%= form_with(model: current_user, url: profile_path, local: true, html: { class: 'needs-validation' }, data: { turbo_frame: 'user-form' }) do |form| %>
      <% if form.object.errors.any? %>
        <div class="alert alert-danger">
          <ul>
            <% form.object.errors.full_messages.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="mb-3">
        <%= form.label :email, class: 'form-label' %>
        <%= form.email_field :email, autofocus: true, class: 'form-control', readonly: true, disabled: true %>
      </div>
      <div class="mb-3">
        <%= form.label :current_password, 'Current Password', class: 'form-label' %>
        <%= form.password_field :current_password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: 'form-label' %>
        <%= form.password_field :password, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.label :password_confirmation, class: 'form-label' %>
        <%= form.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="mb-3">
        <%= form.submit 'Update', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
<% end %>